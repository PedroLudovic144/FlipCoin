<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlipCoin.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <Label
                x:Name="LblResult"
                />

            <Picker
                x:Name="PickerDecider"
                Title="Selecione o seu lado BB">
                <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                        <x:String>Cara</x:String>
                        <x:String>Coroa</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            

            <Button
                x:Name="BtnFlipCoin"
                Text="Gire a moeda"
                Clicked="BtnFlipCoin_Clicked"
                />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
