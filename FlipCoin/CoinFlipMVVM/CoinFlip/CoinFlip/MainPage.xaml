<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoinFlip.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="SelectedCoinImage"
                Source="coroa.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Selected coin" />

            <Label
                Text="Escolha Cara ou Coroa"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Button
                Text="Cara"
                Clicked="OnCaraClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Coroa"
                Clicked="OnCoroaClicked"
                HorizontalOptions="Fill" />

            <Button
                x:Name="PlayButton"
                Text="Jogar" 
                SemanticProperties.Hint="Joga a moeda"
                Clicked="OnPlayButtonClicked"
                HorizontalOptions="Fill" />

            <Label
                x:Name="ResultLabel"
                Text="Resultado"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
