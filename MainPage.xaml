<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="FlipCoin.MainPage">

    <StackLayout Padding="20">

        <Label Text="Escolha Cara ou Coroa" FontSize="20" HorizontalOptions="Center" />

        <Picker x:Name="coinPicker" Title="Selecione" SelectedIndexChanged="CoinPicker_SelectedIndexChanged">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Cara</x:String>
                    <x:String>Coroa</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Jogar Moeda" Clicked="Button_Clicked" />

        <Image x:Name="coinImage" HorizontalOptions="Center" VerticalOptions="Center" Source="cara.png" WidthRequest="100" />

        <Label x:Name="resultLabel" FontSize="25" FontAttributes="Bold" HorizontalOptions="Center" />

    </StackLayout>

</ContentPage>
